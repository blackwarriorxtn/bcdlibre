<!DOCTYPE html>
<html>
  <head>
    <%- include('../html_head', {title: title}) %>
    <%- include('delete_script') %>
    <%- include('../form_script') %>
  </head>
  <body>
    <div id="page">
      <div id="main">
        <%- include('../page_header', {title: title, subtitle: __("Retour"), menus:menus}) %>
        <div class="container">
          <!-- Custom form -->
          <%- include('../form_message', {message: message}) %>
          <form id="_FORM_NEW" class="form-vertical" action="delete" method="post">
            <fieldset id="_FORM_NEW_FIELDS">
              <input type="hidden" name="id" id="id">
              <div class="row">
              <div class="col-xs-12 col-md-12">
              <div class="form-group has-feedback">
                  <input type="text" class="form-control form-control-required form-dont-submit input-lg" data-form-control-autocomplete="id" name="borrow_search" id="borrow_search" autocomplete="off" spellcheck="false" size="50" placeholder="<%=__('Livre et emprunteur (ISBN, Titre, Nom, Classe)')%>">
                  <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
                  <span id="_STATUS_borrow_search" class="sr-only">(success)</span>
              </div><!-- class="form-group has-feedback" -->
              </div>
            </div><!-- class="row" -->
<p>
            <%- include('../form_okcancel', { visible:true }) %>
</p>
            </fieldset>
          </form>
        </div>
      </div>
    </div>

    <%- include('../page_footer') %>
  </body>
</html>
