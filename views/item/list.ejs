<!DOCTYPE html>
<html>
  <head>
    <%- include('../html_head', {title: title}) %>
    <%- include('../form_script') %>
  </head>
  <body>
    <div id="page">
      <div id="main">
        <%- include('../page_header', {title: title, subtitle: subtitle, menus:menus}) %>
        <div class="container-fluid">
          <% if (records && records.length > 0) { %>
          <table class="table table-hover table-striped table-bordered">
            <caption><%=__("Liste des livres", records.length)%></caption>
            <thead>
              <tr>
                <th>#</th>
                <th><%=__("ISBN")%></th>
                <th><%=__("Ex.")%></th>
                <th><%=__("Emprunts")%></th>
                <th><%=__("Classification")%></th>
                <th><%=__("SÃ©rie")%></th>
                <th><%=__("Titre")%></th>
                <th><%=__("Auteur")%></th>
                <th><%=__("Description")%></th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i< records.length; i++) { %>
                <tr data-href="view?id=<%- records[i].id %>"<%- (records[i].__cssclass ? " class=\"" + records[i].__cssclass + "\"" : "") %>>
                  <td><a href="view?id=<%- records[i].id %>">#<%= records[i].id %></a></td>
                  <td><%= records[i].isbn13 %></td>
                  <td<%- (records[i].__cssclass_counter ? " class=\"" + records[i].__cssclass_counter + "\"" : "") %>><%= records[i].counter %></td>
                  <td<%- (records[i].__cssclass_borrowed ? " class=\"" + records[i].__cssclass_borrowed + "\"" : "") %>><%= records[i].borrowed %></td>
                  <td><%= records[i].classification %></td>
                  <td><%= records[i].series_title %></td>
                  <td><%= records[i].title %></td>
                  <td><%= records[i].author %></td>
                  <td><%= records[i].description %></td>
                </tr>
              <% } // for %>
            </tbody>
          </table>
          <%
          } // if (records && records.length > 0)
          else
          {
            %><div class="text-info"><%=__("Aucun livre dans l'inventaire.")%></div><%
          } // else if (records && records.length > 0)
          %>
        </div><!-- class="container" -->
      </div><!-- id="main" -->
    </div><!-- id="page" -->

    <%- include('../page_footer') %>
  </body>
</html>
